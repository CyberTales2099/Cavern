import speech_recognition as sr
import pyttsx3
import requests

# Initialize recognizer and engine
recognizer = sr.Recognizer()
engine = pyttsx3.init()

# 1. Function to speak
def speak(text):
    engine.say(text)
    engine.runAndWait()

# 2. Function to listen
def listen():
    with sr.Microphone() as source:
        print("Listening...")
        audio = recognizer.listen(source)
        try:
            command = recognizer.recognize_google(audio)
            print(f"You said: {command}")
            return command
        except sr.UnknownValueError:
            speak("Sorry, I didn't understand that.")
        except sr.RequestError:
            speak("Sorry, my speech service is unavailable.")

# 3. Basic chatbot logic (you'll expand this later)
def get_chatbot_response(command):
    if "hello" in command:
        return "Hello there!"
    elif "goodbye" in command:
        return "Goodbye!"
    else:
        return "I'm still learning. Can you rephrase that?"

# 4. (We'll add the GitHub storage function later)

# Main loop
if __name__ == "__main__":
    speak("Hello, I am your chatbot. How can I assist you?")
    while True:
        command = listen().lower()
        response = get_chatbot_response(command)
        speak(response)
        if response == "Goodbye!":
            break
